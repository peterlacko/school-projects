		<span class="upravit"><a href="{link Akce:editakce id_akce=>$a->ID_akce}"><img src="{$basePath}/images/icons/edit.png" alt="Upravit" title="Upravit"></a></span>
	{/if}
	<br/>
	{$a->Text}
	<br/><br/>
{/foreach}
</div>

{/block}
